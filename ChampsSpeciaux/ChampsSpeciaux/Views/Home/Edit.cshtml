@model ChampsSpeciaux.Models.Travel

@{ Layout = "~/Views/Shared/_Layout.cshtml";
  var title = "Edit a Travel"; }

<div class="border p-3 DivBgForm">
  <form class="form-horizontal" method="post" asp-action="Edit" enctype="multipart/form-data">
    <div class="row p-3 border">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <input hidden asp-for="Id" class="form-control" />
      <input  asp-for="TravelImage" class="form-control" />
      <div class="col-12 border-bottom">
        <h2 class="text-primary">@title</h2>
      </div>

      <div class="col-8  pt-4">

        <div class="form-group row">
          <div class="col-3">
            <label asp-for="Name"></label>
          </div>
          <div class="col-8">
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-3">
            <label asp-for="Description"></label>
          </div>
          <div class="col-8">
            <textarea asp-for="Description" class="form-control summernote"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-3">
            <label asp-for="TravelImage"></label>
          </div>
          <div class="col-8">
            <input type="file" name="files" id="uploadBox" asp-for="TravelImage" class="form-control" value="@Model.TravelImage" />
            <span asp-validation-for="TravelImage" class="text-danger"></span>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-8 offset-3">
            <div class="row">
              <div class="col">
                <button type="submit" class="btn btn-primary form-control"><i class="fas fa-edit"></i>&nbsp; Edit</button>
              </div>
              <div class="col">
                <a asp-action="Index" class="btn btn-success form-control"><i class="fas fa-arrow-alt-circle-left"></i>&nbsp;Back to List</a>
              </div>
            </div>
          </div>
        </div>
      </div>



      <div class="col-4 text-center pt-4">
        @if (Model.TravelImage != "")
        {
          <img src="@AppConstants.ImagePathView@Model.TravelImage" id="TravelImage" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
        }
        else
        {
          <img src="@AppConstants.ImagePathView@AppConstants.ImageGeneric" id="TravelImage" width="100%" style="border-radius:5px; border:1px solid #bbb9b9" />
        }

      </div>

    </div>
  </form>
</div>

@section Scripts{
  <partial name="_ValidationScriptsPartial" />
  <script>
    $(document).ready(function () {
      $('.summernote').summernote();
    });

  </script>

  <script>

    function validateInput() {
      if (document.getElementById("uploadBox").value == "") {
        swal("Error", "Please select an image", "error");
        return false;
      }
      return true;
    };

  </script>

}