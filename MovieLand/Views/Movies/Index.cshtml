@using MovieLand_Models
@model IEnumerable<Movie>

@{
    ViewData["Title"] = "Films";
}


<div class="row actions-container center">
    <div class="col-1">
        <a asp-action="Create"><i class="bi bi-plus-circle-fill text-white" title="Ajouter un nouveau film"></i></a>
    </div>
</div>
<div class="row items-container">
    @foreach (Movie m in Model)
    {
        <div class="col-2 item-wrapper mb-3" id="@m.MovieId">
            <div class="card border-0 h-100" style="width:100%;">
                <img class="card-img-top" src="https://image.tmdb.org/t/p/w185_and_h278_multi_faces/@(m.Poster)" alt="@m.Title">
                <div class="card-body bg-dark">
                    <div class="row item-actions">
                        <div class="col item-action-edit"><a asp-action="Edit" asp-route-id="@m.MovieId"><i class="bi bi-pencil-fill text-white" title="Modifier le film"></i></a></div>
                        <div class="col item-action-details"><a asp-action="Details" asp-route-id="@m.MovieId"><i class="bi bi-info-circle-fill text-white" title="Voir les détails du film"></i></a></div>
                        <div class="col item-action-delete"><a asp-action="Delete" asp-route-id="@m.MovieId"><i class="bi bi-trash3-fill text-white" title="Supprimer le film"></i></a></div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>