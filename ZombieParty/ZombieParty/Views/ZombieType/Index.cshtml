@model IEnumerable<ZombieParty_Models.ZombieType>

<div class="container p-3">
  <div class="row pt-4">
    <div class="col-10">
      <h2 class="text-primary">Zombie Type</h2>
    </div>
    <div class="col-2 text-right">
      <a asp-controller="ZombieType" asp-action="Create" class="btn btn-success">
        <i class="fas fa-plus-circle"></i> &nbsp; Create New Type
      </a>
    </div>
  </div>

  <br /><br />
  @if (Model.Count() > 0)
  {
    <table class="table table-bordered table-striped" style="width:100%">
      <thead class="bg-dark text-white">
        <tr>
          <th>
            @Html.DisplayNameFor(model => model.TypeName)
          </th>
          <th class="text-center">
            Type Point
          </th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        @foreach (var item in Model)
        {
        <tr>
          <td width="50%">@item.TypeName</td>
          <td class="text-center" width="15%">@item.Point</td>
          <td class="text-center">
            <div class="w-75 btn-group" role="group">
              <a asp-controller="ZombieType" asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-warning mx-2">
                <i class="far fa-edit"></i>&nbsp;Edit
              </a>
              <a asp-controller="ZombieType" asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger mx-2">
                <i class="far fa-trash-alt"></i>&nbsp; Delete
              </a>
            </div>
          </td>
        </tr>
        }
      </tbody>
    </table>
  }
  else
  {
    <p>No Zombie Type exists.</p>
  }

</div>